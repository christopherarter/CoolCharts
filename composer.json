    "require-dev": {
        "pestphp/pest": "^2.10",
        "symfony/var-dumper": "^6.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest --colors"
    }
