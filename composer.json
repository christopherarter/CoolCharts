{
    "name": "christopherarter/cool-charts",
    "description": "This is the cool-charts project.",
    "version": "0.1.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher Arter",
            "email": "chris@arter.dev"
        }
